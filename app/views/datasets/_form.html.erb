<%= form_for @dataset , :html => {:multipart => true} do |f| %>
  <% if @dataset.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@dataset.errors.count, "error") %> prohibited this dataset from being saved:</h2>
      <ul>
      <% @dataset.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <!-- <div class="element">
    <label for="comments">Comments</label>
    <input type="radio" name="comments" value="on" checked="checked" />
    Enabled
    <input type="radio" name="comments" value="off" />
    Disabled
  </div> -->
  <% unless @no_upload.present? %>
  <div class="element">
    <label for="attach">
      Dataset Source file 
      <span class="red">(required)</span>
      <span>(Allowed extensions .xls | .csv)</span>
      <!-- <span>(Max allowed file size 1mb)</span> -->
    </label>
    <%= file_field_tag :source_file %>
  </div>
  <% end %>
  <div class="element">
    <label for="name">
      Dataset title
      <span>(Optional) If left blank, title will automatically be selected based on source file</span>
    </label>
    <%= f.text_field :title, :class => "text" %>
  </div>
  <div class="element">
    <label for="content">
      Description
      <span>(Describe about the dataset in a few words)</span>
    </label>
    <%= f.text_area :description, :rows => 5, :class => "textarea" %>
    <!-- <textarea name="content" class="textarea" rows="10"></textarea> -->
  </div>
  <div class="element">
    <label for="category">
      Keywords
    </label>
    <%= f.text_field :keywords, :class => "text" %>
  </div>
  <div class="entry">
    <!-- <button type="submit">Preview</button> -->
    <button type="submit" class="add">Save Dataset</button>
    <%= link_to "Cancel", datasets_path, :class => "button cancel" %>
    <!-- <button class="cancel">Cancel</button> -->
  </div>
<% end %>