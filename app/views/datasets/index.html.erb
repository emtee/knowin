<div class="full_w">
  <div class="h_title">Manage Datasets</div>
  <h2>Listing datasets</h2>
  <p>
    Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumyeirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diamvolupt
  </p>

  <div class="entry">
    <div class="sep"></div>
  </div>
  <table id="datasets">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Title</th>
        <th scope="col">Author</th>
        <th scope="col">Category</th>
        <th scope="col">Created On</th>
        <th scope="col">Modify</th>
      </tr>
    </thead>
    <tbody>
      <% @datasets.each do |dataset| %>
      <tr>
        <td class="align-center">1</td>
        <td><%= link_to dataset.title.titleize, dataset_path(dataset) %></td>
        <td>Admin</td>
        <td>-</td>
        <td><%= dataset.created_at %></td>
        <td>
          <a href="#" class="table-icon view" title="View"></a>
          <a href="#" class="table-icon delete" title="Delete"></a>
          <a href="#" class="table-icon archive" title="Archive"></a>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div class="entry">
    <!-- <div class="pagination">
      <span>« First</span>
      <span class="active">1</span>
      <a href="">2</a>
      <a href="">3</a>
      <a href="">4</a>
      <span>...</span>
      <a href="">23</a>
      <a href="">24</a>
      <a href="">Last »</a>
    </div> -->
    <div class="sep"></div>
    <%= link_to 'Add New Dataset', new_dataset_path, :class => "button add" %>
    <a class="button" href="">Categories</a>
  </div>
</div>


<script type="text/javascript">
$(document).ready(function(){
  $("#datasets").dataTable({
    "sPaginationType": "full_numbers",
    "bJQueryUI": true
  });
});
</script>