	<title>knowIN (knowing my India) - Admin</title>
	<%#= stylesheet_link_tag    "application", :media => "all" %>
	<%#= javascript_include_tag "application" %>
	<link rel="stylesheet" type="text/css" href="/assets/application.css" media="screen" />
